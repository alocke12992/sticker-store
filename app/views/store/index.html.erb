<div class="container">
  <h1>Stickers</h1>

  <div class="product">
    <h2>Pack of 5 stickers for $5</h2>
    <h3>Free shipping anywhere in the world!</h3>
    <div class="sticker">
      <%= image_tag("reactallthethings.jpeg", alt: "React all the things") %>
    </div>
    <%= form_tag charges_path do %>
      <article>
        <% if flash[:error].present? %>
          <div id="error_explanation">
            <p>
              <%= flash[:error] %>
            </p>
          </div>
          <% end %>
            <label class="amount">
              <span>Amount: $5.00</span>
            </label>
      </article>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description="Pack of 5 stickers" data-amount="500" data-locale="auto"></script>
      <% end %>
  </div>
</div>